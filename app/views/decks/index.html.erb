<h3 class="text-center">Here are your decks.</h3>

<div class="decks">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="card">
          <% @user.decks.each do |deck| %>
            <h3 class="card-title"><%= link_to "#{deck.name}", user_deck_path(@user, deck)%></h3>
            <p class="card-text"><%= link_to("x", user_deck_path(@user, deck), method: :delete, class: "btn btn-danger") %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
