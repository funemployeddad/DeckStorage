<h3 class="text-center">Here are your decks.</h3>

<!-- need to implement the filter_by_format scope method here so that if it is used, only the decks for the chosen format are displayed -->

<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Deck Name</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @user.decks.each do |deck| %>
    <tr class="table-light">
      <th scope="row"><%= link_to "#{deck.name}", user_deck_path(@user, deck)%></th>
      <td> <%= link_to("", user_deck_path(@user, deck), method: :delete, class: "btn btn-danger") %> </td>
    <% end %>
  </tr>
  </tbody>
</table>
