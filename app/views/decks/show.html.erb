<div class="cards">
  <div class="container">
    <h2 class="text-center"> <%= @deck.name%> </h2>
    <div class="row">
      <div class="col-md-4 col-lg-4 col-sm-12">
        <div class="card">
          <div class="card-body">
            <% @deck.cards.each do |card| %>
              <h3 class="Card-title">
                <% @card = card %>
                <strong> <%= card.name %></strong> <br>Quantity: <%= card.quantity %> </h3>
                <%= link_to("delete", @card_path, method: :delete, class: "btn btn-danger") %>
            <p class="card-text"> </p>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= button_to "Add Card", '/decks/cards/new' %>
