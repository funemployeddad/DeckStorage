<h2 class="text-center"> <%= @deck.name%> </h2>
<div class="cards">
  <div class="container">
    <div class="row">
      <% @deck.cards.each do |card| %>
      <div class="col-md-3 col-lg-3 col-sm-12">
        <div class="card">
          <h3 class="card-title"><%= card.name %></h3>
            <p class="card-text">Quantity: <%= card.quantity %> </p>
          <div class="card-footer">
          <% @card = card %>
          <%= link_to("x", card_path(@card), method: :delete, class: "btn btn-danger") %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <%= button_to "Add Card", '/decks/cards/new' %>
  </div>
</div>
