MODELS
  User
    :name, :email, :password_digest, :uid
    has_many :decks
    has_many :cards, through: :decks

  Deck
    :name, :user_id
    belongs_to :user
    has_many :cards

  Card
    :name, :quantity, :deck_id
    belongs_to :deck


